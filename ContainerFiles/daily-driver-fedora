FROM quay.io/fedora/fedora-toolbox:latest

LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the toolbox or distrobox command" \
      summary="A daily-driver Fedora toolbox with development tools and GUI applications" \
      maintainer="pietersz@gmail.com"

# Copy the setup scripts and package list
COPY ../scripts/daily-driver-fedora.sh /
COPY ../scripts/distrobox-shims.sh /
COPY ../packages/daily-driver-fedora.packages /

# Run the setup scripts
RUN chmod +x daily-driver-fedora.sh distrobox-shims.sh && /daily-driver-fedora.sh
RUN rm /daily-driver-fedora.sh /distrobox-shims.sh /daily-driver-fedora.packages

