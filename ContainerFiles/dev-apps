FROM quay.io/toolbx/arch-toolbox:latest

LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the toolbox or distrobox command" \
      summary="A development and productivity Arch toolbox with applications from AUR, designed as a Flatpak replacement for Bluefin Linux" \
      maintainer="pietersz@gmail.com"

# Copy the setup scripts and package list
COPY ../scripts/dev-apps.sh /
COPY ../scripts/distrobox-shims.sh /
COPY ../packages/dev-apps.packages /

# Run the setup scripts
RUN chmod +x dev-apps.sh distrobox-shims.sh && /dev-apps.sh
RUN rm /dev-apps.sh /distrobox-shims.sh /dev-apps.packages

